<!-- validate jquery-->
<script src="https://code.jquery.com/jquery-3.6.0.js"
        integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>

    <!-- Jquery Validation -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/additional-methods.js"></script>

<section class="vh-100" style="background-image:url('/uploads/charlotte-noelle-98WPMlTl5xo-unsplash.jpg')">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem; background-color: #ffffff80;">
          <div class="card-body p-5 text-center" >

            <h3 class="mb-5">Log in</h3>
            <form action="/ulogin" method="post" id="userlogin">

                <input type="email" placeholder="email" name="email" id="typeEmailX-2"
                  class="form-control form-control-lg" minlength="6" required noCaps=true>


                <input type="password" placeholder="password" name="password" id="typePasswordX-2"
                  class="form-control form-control-lg mt-3 mb-3" minlength="3" required />

              {{#if passErr}}
              <h5 class="text-danger text-capitalize">Bad Credentials Enterred</h5>
              {{else if emailErr}}
              <h5 class="text-danger text-capitalize">Bad Credentials Enterred</h5>
              {{/if}}

              <button class="btn btn-primary btn-md btn-block" type="submit">Login</button>
              {{!-- forget password --}}
              <a  class="text mt-3 float-right" style="color: black;" href="/forgetPassword">forgotten your password</a>

              
              <hr class="my-4">
              <p class="text">Don't have an account? <a href="/signup" class="a">Create an account</a></p>

            </form>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<style>
  #typeEmailX-2-error,
  #typePasswordX-2-error {
    color: red
  }
</style>

<script>
    $.validator.addMethod("noCaps", function (value, element) {
        return this.optional(element) || !/[A-Z]/.test(value);
    }, "email can't have upper case letters")

  $("#userlogin").validate();
</script>