<!-- validate jquery-->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript"
  src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>


<section class="vh-100" style="background-color: #508bfc;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5">Log in</h3>
            <form action="/ulogin" method="post" id="userlogin">

              <div class="form-outline mb-4">
                <label class="form-label" for="typeEmailX-2">Email</label>
                <input type="email" name="email" value="mhdarshad2937@gmail.com" id="typeEmailX-2"
                  class="form-control form-control-lg" minlength="6" required />

              </div>

              <div class="form-outline mb-4">
                <label class="form-label" for="typePasswordX-2">Password</label>
                <input type="password" value="1234" name="password" id="typePasswordX-2"
                  class="form-control form-control-lg" minlength="3" required />
              </div>
              {{#if passErr}}
              <h5 class="text-danger text-capitalize">Bad Credentials Enterred</h5>
              {{else if emailErr}}
              <h5 class="text-danger text-capitalize">Bad Credentials Enterred</h5>
              {{/if}}

              <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
              {{!-- forget password --}}
              <a href="/forgetPassword">forgotten your password</a>

              
              <hr class="my-4">
              <p class="text">Don't have an account? <a href="/signup" class="a">Create an account</a></p>

            </form>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<style>
  #typeEmailX-2-error,
  #typePasswordX-2-error {
    color: red
  }
</style>

<script>
  $("#userlogin").validate();
</script>