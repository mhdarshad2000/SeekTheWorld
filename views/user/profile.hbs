<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript"
  src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>


<section style="background-color: #eee;" class="mt-5 pt-5">
  <div class="container py-5">


    <div class="row">
      <div class="col-lg-4">
        <div class="card shadow-lg p-3 mb-5 bg-white rounded mb-4">
          <div class="card-body text-center">
            <div>
              <form action="/updateProfileImg" method="post" enctype="multipart/form-data" required>
                <div class="avatar-upload">
                  <div class="avatar-edit">
                    <input type='file' id="imageUpload" name="Image" accept=".png, .jpg, .jpeg" />
                    <label for="imageUpload"></label>
                  </div>
                  <div class="avatar-preview">
                    <div id="imagePreview" style="background-image: url('/uploads/{{profile.profileImage}}');">
                    </div>
                  </div>
                </div>
                <button class="btn btn-dark" id="updateImgBtn" type="submit" hidden>save Update</button>
              </form>
            </div>
            <h5 class="my-3">{{profile.name}}</h5>
            {{!-- <p class="text-muted mb-1">Full Stack Developer</p>
            <p class="text-muted mb-4">Bay Area, San Francisco, CA</p> --}}
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card shadow-lg p-3 mb-5 bg-white rounded mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="ml-4">Full Name</p>
              </div>
              <div class="col-sm-5">
                <p class="text-muted mb-0">{{profile.name}}</p>
              </div>
              <div class="col-sm-4">
                <button class="btn" data-toggle="modal" data-target="#name"><svg xmlns="http://www.w3.org/2000/svg"
                    width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                    <path
                      d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                  </svg></button>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="ml-4">Email</p>
              </div>
              <div class="col-sm-5">
                <p class="text-muted mb-0">{{profile.email}}</p>
              </div>
              <div class="col-sm-4"><button class="btn" data-toggle="modal" data-target="#email"><svg
                    xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-pencil-fill" viewBox="0 0 16 16">
                    <path
                      d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                  </svg></button>
              </div>

            </div>

            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="ml-4">Phone</p>
              </div>
              <div class="col-sm-5">
                <p class="text-muted mb-0">{{profile.phone}}</p>
              </div>
              <div class="col-sm-4">
                <button class="btn" data-toggle="modal" data-target="#phone"><svg xmlns="http://www.w3.org/2000/svg"
                    width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                    <path
                      d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                  </svg></button>
              </div>

            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="ml-4">Passport Number</p>
              </div>
              <div class="col-sm-5">
                <p class="text-muted mb-0">{{profile.passportNumber}}
                </p>
              </div>
              <div class="col-sm-4">
                <button class="btn" data-toggle="modal" data-target="#passport"><svg xmlns="http://www.w3.org/2000/svg"
                    width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                    <path
                      d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                  </svg></button></span></p>

              </div>
            </div>
            <hr>



            <div class="row">
              <div class="col-sm-3">
                <p class="ml-4">Address</p>
              </div>
              <div class="col-sm-5 ">

                <p>{{profile.address.house}}</p>
                <p>{{profile.address.place}} ,
                  <span>{{profile.address.post}}</span>
                </p>
                <p>{{profile.address.city}} ,<span>
                    {{profile.address.district}}</span></p>
                <p>{{profile.address.state}}<span> , {{profile.address.pinCode}}</span></p>
              </div>
              <div class="col-sm-4">
                <button class="btn" data-toggle="modal" data-target="#address"><svg xmlns="http://www.w3.org/2000/svg"
                    width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                    <path
                      d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                  </svg></button>

              </div>
            </div>

          </div>
        </div>
      </div>
      <!-- Modal -->
      <div class="modal" id="name" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-body">
              <div class="form-group row d-flex justify-content-center">
                <label for="email" class="col-sm-2 col-form-label">Name</label>
                <input type="text" class="form-control w-75" id="userName" placeholder="{{profile.name}}" required>
                <button class="btn btn-primary btn-sm mt-4" type="submit"
                  onclick="updateDatas('userName')">Update</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="modal" id="email" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">

            <div class="modal-body">
              <label for="email" class="col-sm-2 col-form-label">Email</label>
              <div class="col-sm-10">
                <input type="email" class="form-control" id="updateEmail" placeholder="{{profile.email}}" required>

                <button class="btn btn-primary btn-sm mt-4" type="submit" onclick="updateEmail('email')">Update</button>
              </div>

            </div>
          </div>
        </div>
      </div>

      <div class="modal" id="phone" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-body">
              <div class="form-group row d-flex justify-content-center">
                <label for="updatePhone" class="col-sm-2 col-form-label">Phone</label>
                <div class="col-sm-10">
                  <input type="Number" id="updatePhone" placeholder="{{profile.phone}}" class="form-control" required>
                </div>
                <button class="btn btn-primary btn-sm btn-center mt-4" type="submit"
                  onclick="updatePhone('phone')">Update</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="modal" id="passport" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">

            <div class="modal-body">
              <div class="form-group row d-flex justify-content-center">
                <label for="updatePassport" class="col-sm-2 col-form-label">passportNumber</label>
                <div class="col-sm-10">
                  <input type="text" id="updatePassport" placeholder="{{profile.passportNumber}}" class="form-control" required>
                </div>
                <button class="btn btn-primary btn-sm btn-center mt-4" type="submit"
                  onclick="updatePassport('passport')">Update</button>
              </div>


            </div>
          </div>
        </div>
      </div>

      <div class="modal" id="address" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">

            <div class="modal-body">
              <form id="addressChange">
                <div class="form-outline">
                  <label for="" class="form-label">House</label>
                  <input type="text" name="house" class="form-control" value="{{profile.address.house}}">
                </div>
                <div class="form-outline">
                  <label for="" class="form-label">Place</label>
                  <input type="text" name="place" class="form-control" value="{{profile.address.place}}" required>
                </div>
                <div class="form-outline">
                  <label for="" class="form-label">Post</label>
                  <input type="text" name="post" class="form-control" value="{{profile.address.post}}" required>
                </div>
                <div class="form-outline">
                  <label for="" class="form-label">Pincode</label>
                  <input type="Number" name="pinCode" class="form-control" value="{{profile.address.pinCode}}" required>
                </div>
                <div class="form-outline">
                  <label for="" class="form-label">City</label>
                  <input type="text" name="city" class="form-control" value="{{profile.address.city}}" required>
                </div>
                <div class="form-outline">
                  <label for="" class="form-label">District</label>
                  <input type="text" name="district" class="form-control" value="{{profile.address.district}}" required>
                </div>
                <div class="form-outline">
                  <label for="" class="form-label">State</label>
                  <input type="text" name="state" class="form-control" value="{{profile.address.state}}" required>
                </div>
                <div class="d-flex justify-content-center">
                  <button type="submit" class="btn btn-primary mt-3">Update</button>
                </div>

              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


