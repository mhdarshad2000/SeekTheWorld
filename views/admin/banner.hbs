<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript"
  src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>


<section>
    <div class="container col-md-6 mt-4">
        <div class="row">
            <div class="col-md-6 text-dark fs-4 fw-bold">
                <h2 class="text-center">Add Banner</h2>
                <form action="/admin/banner" method="post" id="add-banner" enctype="multipart/form-data">
                    <div class="form-outline mb-4">
                        <label for="name">Name</label>
                        <input type="text" name="Name" id="name" class="form-control" minlength="3" required>
                    </div>
                     <div class="form-outline mb-4">
                        <label for="btn">Hero_Button</label>
                        <input type="text" name="hero_btn" id="btn" class="form-control" minlength="3" required>
                    </div>
                    <div class="form-row form_img">
                        <div class="grid">
                            <div class="form-element">
                                <input type="file" id="file-1" accept="image/*" name="Image" required>
                                <label for="file-1" id="file-1-preview">
                                    <img src="/dummy-post-square-1-thegem-blog-masonry.jpg" alt="">
                                    <div>
                                        <span>+</span>
                                    </div>
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    
                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>

<link rel="stylesheet" href="/Admin/css/style.css">

<script src="/Admin/js/custom.js"></script>



<script>
    $("#add-banner").validate();
</script>
<style>
    .error{
        color : red
    }
</style>