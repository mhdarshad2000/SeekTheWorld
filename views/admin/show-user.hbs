<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">

      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h2>Users</h2>
            <div class="table-responsive">
              <table class="table table-hover" id="category_table">
                <tr id="table">

                  <th scope="col">Number</th>
                  <th scope="col">Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Phone</th>
                  <th scope="col"></th>
                  <thead>

                  </thead>
                  <tbody>
                    {{#each users}}

                    <tr>
                      <td>{{inc @index}}</td>
                      <td>{{this.name}}</td>
                      <td>{{this.email}}</td>
                      <td>{{this.phone}}</td>

                      <td id="{{this._id}}">{{#if this.isBlocked}}
                        <button class="btn btn-primary mx-3" onclick="unBlock('{{this._id}}')">Un block
                        </button>
                        {{else}}
                        <button class="btn btn-danger mx-3" onclick="block('{{this._id}}')">Block
                        </button>

                        {{/if}}
                      </td>

                    </tr>
                   

                    {{/each}}



                  </tbody>

              </table>

              <!-- content-wrapper ends -->

            </div>
            <!-- main-panel ends -->
          </div>
          <!-- page-body-wrapper ends -->
        </div>

<script src="/Admin/js/custom.js"></script>


